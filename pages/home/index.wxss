.container {
  min-height: 100%;
  background-color: #fdfdfd;
}

.wave-wrapper {
  position: fixed;
  top: 0;
  width: 100%;
  overflow: hidden;
  height: 354rpx;
  background-color: #1c89ea;
}

/*userinfo part*/

.user-info {
  position: relative;
  z-index: 300;
  padding: 40rpx;
  padding-top: 35rpx;
}

.user-id {
  font-size: 56rpx;
  font-weight: 400;
  color: #fff;
}

.user-work-place {
  font-size: 24rpx;
  color: #fff;
}

/*workinfo part*/

.work-container {
  position: relative;
  z-index: 300;
  padding: 20rpx;
  padding-top: 0;
}

.blocks-inner {
  display: flex;
  justify-content: space-between;
  line-height: 102rpx;
}

.blocks-padding {
  padding: 30rpx 60rpx;
}

.blocks-inner .title {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 32rpx;
  font-weight: 400;
}

.blocks-inner .value {
  color: #6d7077;
  font-size: 32rpx;
}

.job-title {
  position: relative;
  font-size: 32rpx;
  font-weight: 400;
  margin-left: 30rpx;
  overflow: visible;
}

.job-title::before {
  position: absolute;
  left: -20rpx;
  top: 50%;
  margin-top: -6rpx;
  content: '';
  padding: 6rpx;
  background-color: #1c89ea;
  border-radius: 6rpx;
}

.job-desc {
  color: #6d7077;
  white-space: pre-line;
  margin-top: 10rpx;
}

/*jobDetail part*/

.job-group {
  margin: 20rpx;
  padding-bottom: 60rpx;
  box-shadow: 0 0 20px 0 rgba(0,0,0,0.05);
}

.job-cell {
  border-bottom: 1px solid #efefef;
}

