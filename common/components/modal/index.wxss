/** 模态 **/
.modal{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 998;
  background-color: rgba(0,0,0,0.50);
}

.modal-layer{
  display: flex;
  flex-direction: column;
  position: absolute;
  background: #fff;
  top: 50%;
  left : 50%;
  transform : translate3d(-50%,-50%,0);
  width: 80%;
  padding: 40rpx 0;
  z-index: 999;
  box-shadow: 0 4rpx 14rpx rgba(0,0,0,.4);
  border-radius: 8rpx;
}

.modal-header{
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.modal-header.border-bottom {
  border-bottom: 1rpx solid #f3f3f3;
}

.modal-header, .modal-footer{
  padding: 20rpx;
}

.modal-header {
  padding-top: 0;
}

.modal-body {
  flex:  1;
  padding: 60rpx 50rpx;
}

.modal-footer{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 0 20rpx;
}

