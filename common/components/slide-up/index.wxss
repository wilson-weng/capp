.slide-up-mask {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1;
  opacity: 0;
}
.slide-up-content {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 2;
  overflow: hidden;
  transform: translateY(100%);
}

.slide-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  color: #888888;
  border-bottom: 1rpx solid #e9e9eb;
  font-size: 28rpx;
}
.title {
  font-size: 32rpx;
  color: #535353;
}
.cancel {
  color: #888888;
}
.confirm {
  color: #535353;
}
.view-hover {
  opacity: 0.7;
}
