.tab__full {
  position: fixed;
  width: 100%;
  height: 100%;
}

.tab__navbar {
  white-space: nowrap;
  width: 100%;
}

.tab__navbar-wrap {
  position: relative;
}

.tab__navbar-item {
  text-align: center;
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  padding: 5rpx 0;
}

.tab__navbar-title {
  font-size: 36rpx;
}

.tab__line {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 5rpx;
  transform:scaleX(0.2);
}

.tab__line--animate {
  transition: left .3s cubic-bezier(.645, .045, .355, 1);
}

.tab__content-wrap {
  width: 100%;
  overflow: hidden;
}

.tab__content {
  width: 100%;
}

