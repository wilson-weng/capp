.group {
  background: #fff;
  margin-bottom: 20rpx;
  position: relative;
}

.group.shadow {
  box-shadow: 0 0 20px 0 rgba(0,0,0,0.05);
}

.hr-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  display: block;
  height: 1rpx;
  width: 100%;
  background-color: #e9e9eb;
}

.hr-top {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  height: 1rpx;
  width: 100%;
  background-color: #e9e9eb;
}
